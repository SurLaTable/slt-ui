{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"newline-per-chained-call": ["error"],
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"no-undef": "off",
		"no-console": ["warn", { "allow": ["warn", "error"] }]
	}
}
